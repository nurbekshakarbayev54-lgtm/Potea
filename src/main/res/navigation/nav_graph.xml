<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="uz.itteacher.potea_plante_commerce.screen.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_introFragment"
            app:destination="@id/introFragment"
            app:enterAnim="@anim/cube_in_right"
            app:exitAnim="@anim/cube_out_left" />
        <action
            android:id="@+id/action_splashFragment_to_pinCheck"
            app:destination="@id/pinCheck" />
    </fragment>
    <fragment
        android:id="@+id/introFragment"
        android:name="uz.itteacher.potea_plante_commerce.screen.IntroFragment"
        android:label="fragment_intro"
        tools:layout="@layout/fragment_intro" >
        <action
            android:id="@+id/action_introFragment_to_createPinCodeFragment"
            app:destination="@id/createPinCodeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="uz.itteacher.potea_plante_commerce.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_favouritesFragment"
            app:destination="@id/favouritesFragment" />
    </fragment>
    <fragment
        android:id="@+id/createPinCodeFragment"
        android:name="uz.itteacher.potea_plante_commerce.screen.CreatePinCodeFragment"
        android:label="fragment_create_pin_code"
        tools:layout="@layout/fragment_create_pin_code" >
        <action
            android:id="@+id/action_createPinCodeFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"/>
    </fragment>
    <fragment
        android:id="@+id/pinCheck"
        android:name="uz.itteacher.potea_plante_commerce.screen.PinCheckFragment"
        android:label="fragment_pin_check"
        tools:layout="@layout/fragment_pin_check" >
        <action
            android:id="@+id/action_pinCheck_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"/>
    </fragment>
    <fragment
        android:id="@+id/favouritesFragment"
        android:name="uz.itteacher.potea_plante_commerce.ui.FavouritesFragment"
        android:label="FavouritesFragment" />
</navigation>